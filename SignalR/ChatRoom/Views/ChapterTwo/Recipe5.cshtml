
@{
    ViewBag.Title = "Recipe5";
}

<h2>Recipe5</h2>

<button id="Send">Send</button>
<p id="message"></p>
@section Scripts {

    <script>
        $(function () {
            var hub = $.connection.echo;
            $.connection.hub.start().done(function () {
                $('#Send').click(function () {
                    hub.server.hello();
                })
            });

            hub.client.greeting = function (message) {
                $('#message').html(message);
            }
        })
    </script>
}
