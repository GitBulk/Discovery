@{
    ViewData["Title"] = "Instant Serch Page";
}
@section styles{
    <environment names="Development">
        <link rel="stylesheet" href="~/css/Vuew/InstantSearch.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/Vuew/InstantSearch.min.css" asp-append-version="true" />
    </environment>
}

<form id="main" v-cloak>
    <div class="bar">
        <input type="text" v-model="searchString" placeholder="Enter your search terms" />
    </div>
    <ul>
        <li v-for="article in filterdArticles">
            <a v-bind:href="article.url"><img v-bind:src="article.image" /></a>
            <p>{{article.title}}</p>
        </li>
    </ul>
</form>


@section scripts{
    <environment names="Development">
        <script src="~/js/Vuew/InstantSearch.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/Vuew/InstantSearch.min.js" asp-append-version="true"></script>
    </environment>
}