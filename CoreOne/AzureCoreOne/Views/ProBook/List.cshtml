@model AzureCoreOne.Models.ProBook.ViewModels.ProductsListViewModel
@foreach (var p in Model.Products)
{
    <div class="well">
        <h3>
            <strong>@p.Name</strong>
            <span class="pull-right label label-primary">
                @p.Price.ToString("c")
            </span>
        </h3>
        <span class="lead">@p.Description</span>
    </div>
}
<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-default" page-class-selected="btn-primary"
     page-url-category="@Model.CurrentCategory" class="btn-group pull-right">
</div>